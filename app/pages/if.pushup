@code {
    name := req.FormValue("name")
}

@if name == "" {
    <div>
        <h1>Hello, world!</h1>
        <a href="/if?name=Deckard">add <tt>name</tt> to URL query params</a>
    </div>
} else {
    <div>
        <h1>Hello, @name!</h1>
        <a href="/if">remove <tt>name</tt> from URL query params</a>
    </div>
}
